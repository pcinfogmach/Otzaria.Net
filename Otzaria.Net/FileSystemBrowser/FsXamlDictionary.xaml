                                            <Setter TargetName="ChaptersExpanderButton" Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <!--<DataTrigger Binding="{Binding IsDirectory}" Value="true">
                                            <Setter TargetName="ChaptersExpanderButton" Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>-->
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>